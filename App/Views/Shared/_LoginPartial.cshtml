@using App.Utilities
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">@CookieManager.GetAuthenticatedUserDetails().FullName&nbsp;<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#">Manage</a></li>
                    <li><a href="#">Projects</a></li>
                    <li><a href="#">Help</a></li>
                    <li role="separator" class="divider"></li>
                    <li class="dropdown-header">My account</li>
                    <li><a href="#">Profile</a></li>
                    <li><a href="/signout">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
